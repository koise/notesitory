<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/motherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:drawableEnd="@drawable/trash">

        <RelativeLayout
            android:id="@+id/todoFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/todoContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Round CheckBox -->
                <CheckBox
                    android:id="@+id/checkboxDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bottom_nav_icon"
                    android:layout_marginStart="1dp"
                    android:drawableStart="@drawable/round_checkbox"/>

                <!-- Task title -->
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wash Clothes"
                    android:textColor="@color/bottom_nav_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Delete button on the right -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:foregroundGravity="center"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/trash"
            android:contentDescription="Delete"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
