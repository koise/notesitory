<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFA"
    tools:context=".DashboardActivity">

    <!-- Main Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFA">

        <!-- Toolbar for Burger Menu (Aligned to End) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FDFDF8"
            app:titleTextColor="@color/off_white"
            android:layoutDirection="rtl"
            android:textDirection="ltr"
            app:navigationIcon="@drawable/ic_menu"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Fragment Container -->
                <FrameLayout
                    android:id="@+id/flFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddNote"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="32dp"
            android:layout_marginBottom="80dp"
            android:translationY="-50dp"
            app:backgroundTint="#5A5A5A"
            app:elevation="10dp"
            android:src="@drawable/ic_add"
            app:tint="#FFFFFF"
            app:maxImageSize="32dp"/>

        <!-- Bottom Navigation View -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_bottom_nav"
            app:menu="@menu/dashboard_nav_menu"
            app:itemIconSize="20dp"
            app:itemIconTint="@drawable/bottom_nav_icon_tint"
            app:itemTextColor="@drawable/bottom_nav_text_color"/>
    </FrameLayout>

    <!-- Navigation Drawer (Aligned to Right) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/drawer_bg"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@drawable/bottom_nav_icon_tint"
        app:itemTextColor="@drawable/bottom_nav_text_color" />
</androidx.drawerlayout.widget.DrawerLayout>
