<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Notesitory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/light_blue</item>
        <item name="colorOnPrimaryContainer">@color/dark_blue</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/mint</item>
        <item name="colorOnSecondaryContainer">@color/navy</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/search_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Notesitory.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Notesitory.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Notesitory.LargeComponent</item>
        
        <!-- Component styles -->
        <item name="textInputStyle">@style/Widget.Notesitory.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.Notesitory.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Notesitory.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.Notesitory.BottomNavigation</item>
        <item name="floatingActionButtonStyle">@style/Widget.Notesitory.FloatingActionButton</item>
    </style>

    <!-- Shape appearances for components -->
    <style name="ShapeAppearance.Notesitory.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Notesitory.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Notesitory.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Custom component styles -->
    <style name="Widget.Notesitory.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="rippleColor">@color/ripple</item>
    </style>
    
    <style name="Widget.Notesitory.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_icon</item>
        <item name="itemTextColor">@color/bottom_nav_text</item>
        <item name="itemRippleColor">@color/ripple</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Notesitory.BottomNavigation.ActiveIndicator</item>
    </style>
    
    <style name="Widget.Notesitory.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>

    <style name="Theme.Notesitory" parent="Base.Theme.Notesitory" />
    
    <!-- Custom Dialog Theme -->
    <style name="Theme.Notesitory.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Notesitory.MediumComponent</item>
        <item name="materialButtonStyle">@style/Widget.Notesitory.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Notesitory.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Notesitory.Button.Dialog.Negative</item>
    </style>
    
    <style name="Widget.Notesitory.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/ripple</item>
    </style>
    
    <style name="Widget.Notesitory.Button.Dialog.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="rippleColor">@color/ripple</item>
    </style>
</resources>